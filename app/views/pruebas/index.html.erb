<h1>Lista de Pruebas</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Fecha</th>
      <th>Hora</th>
      <th>Editar</th>
      <th>Eliminar</th>
      <th>Administrar</th>
      <th>Listado de alumnos</th>
      <th>Hoja de firmas</th>
    </tr>
  </thead>
  <tbody>
    <% @pruebas.each do |prueba| %>
      <tr>
        <td><%= prueba.titulo %></td>
        <td><%= prueba.fecha.to_time.utc.strftime('%d/%m/%Y') %></td>
        <td><%= prueba.fecha.to_time.utc.strftime('%H:%M') %></td>
        <td><%= link_to "Editar", controller: "pruebas", action: "editar", id: prueba %></td>
        <td><%= link_to "Eliminar", delete_prueba_path(:id => prueba), :method => :delete, :confirm => "¿Está seguro que desea eliminar esta prueba?" %></td>
        <td><%= link_to "Administrar", controller: "pruebas", action: "administrar", id: prueba %></td>
        <td><%= link_to "Listado de alumno", imprimir_listado_path(id: prueba), :target => "_blank" %></td>
        <td><%= link_to "Hoja de firmas", imprimir_listado_firmas_path(id: prueba), :target => "_blank" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Agregar prueba", action: "agregar" %>