<h1>Lista de Usuarios</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>E-mail</th>
      <th>Admin?</th>
      <th>Editar</th>
      <th>Eliminar</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.admin ? "Si" : "No" %></td>
        <td><%= link_to "Editar", controller: "users", action: "editar", id: user %></td>
        <td><% if user.id != current_user.id %><%= link_to "Eliminar", delete_user_path(:id => user), :method => :delete, :confirm => "Â¿EstÃ¡ seguro que desea eliminar a este usuario?" %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Agregar usuario", action: "agregar" %>