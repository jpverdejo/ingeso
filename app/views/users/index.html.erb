<h1>Lista de Usuarios</h1>

<table class="table table-striped table-condensed">
	<thead>
		<tr>
			<th>E-mail</th>
			<th>Admin?</th>
			<th>Editar</th>
			<th>Eliminar</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%= user.email %></td>
				<td><%= user.admin ? "Si" : "No" %></td>
				<td><%= link_to "Editar", controller: "users", action: "editar", id: user %></td>
				<td><%= link_to "Eliminar", controller: "users", action: "eliminar", id: user, method: :delete %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to "Agregar usuario", action: "agregar" %>