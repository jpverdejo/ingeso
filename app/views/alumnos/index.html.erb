<h1>Lista de alumnos</h1>

<table class="table table-striped table-condensed">
	<thead>
		<tr>
			<th>RUT</th>
			<th>Nombre</th>
			<th>Ingreso</th>
			<th>Grupo</th>
			<th>Seccion</th>
			<th>Foto</th>
			<th>Edit</th>
		</tr>
	</thead>
	<tbody>
		<% @alumnos.each do |alumno| %>
			<tr>
				<td><%= alumno.rut %></td>
				<td><%= alumno.nombre %></td>
				<td><%= "#{alumno.ingreso_ano}-#{alumno.ingreso_semestre}" %></td>
				<td><%= alumno.grupo %></td>
				<td><%= alumno.seccion %></td>
				<td><%= alumno.foto.exists? ? "Si" : "No" %></td>
				<!-- <td><%= image_tag alumno.foto.url(:thumb) %></td> -->
				<td><%= link_to "Editar", controller: "alumnos", action: "editar", id: alumno %></td>
			</tr>
		<% end %>
	</tbody>
</table>
